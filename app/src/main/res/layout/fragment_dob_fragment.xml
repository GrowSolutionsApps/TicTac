<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dob_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context="com.musiktok.musictok.ActivitesFragment.Accounts.DOB_F">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="@drawable/d_bottom_gray_line"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--          <ImageButton
                              android:id="@+id/Goback"
                              android:layout_width="@dimen/_9sdp"
                              android:layout_height="@dimen/_16sdp"
                              android:layout_alignParentStart="true"
                              android:layout_alignParentLeft="true"
                              android:layout_centerVertical="true"
                              android:layout_marginStart="@dimen/_15sdp"
                              android:background="@android:color/transparent"
                              android:scaleType="fitStart"
                              android:src="@drawable/ic_new_back"
                              android:tint="@color/black" />
          -->
                <RelativeLayout
                    android:id="@+id/rel_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_15sdp">

                    <ImageButton
                        android:id="@+id/Goback"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_new_back"
                        android:tint="@color/black" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="Sign up"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title"
                    android:textStyle="bold"
                    android:visibility="gone" />


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/main_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_back"
                android:text="What's your birthday?"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/iv_back"
                android:text="Your birthday won't be shown publicly."
                android:textColor="@color/dark_gray"
                android:textSize="14dp" />

            <!--            <androidx.cardview.widget.CardView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="200dp"-->
            <!--                android:layout_marginTop="20dp"-->
            <!--                app:cardBackgroundColor="@color/white"-->
            <!--                app:cardCornerRadius="5dp">-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.ycuwq.datepicker.date.DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@color/white"
                    app:selectedTextColor="#24253D"
                    app:selectedTextSize="@dimen/_20sdp"
                    app:wheelCurtain="false"
                    app:wheelCurtainBorder="false"
                    app:wheelCurtainColor="@color/white"
                    app:zoomInSelectedItem="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/hilght_black" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="bottom">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/hilght_black" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <!--
                        android:outlineSpotShadowColor="@color/black"
                        app:wheelCurtainBorderColor="@color/black"
                        app:itemTextColor="@color/black"
                        android:outlineAmbientShadowColor="@color/black"
                        -->
            <!--            app:wheelCurtainColor="@color/white"-->
            <!--            app:wheelCurtainBorderColor="@color/white"-->
            <!--            app:zoomInSelectedItem="true"
                android:outlineAmbientShadowColor="@color/white"
                app:wheelCurtainBorderColor="@color/white"
            -->

            <!--            </androidx.cardview.widget.CardView>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_div">


            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_dob_next"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:background="@drawable/img_new_next_bg"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:clickable="false"
                android:enabled="false"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_new_next"
                android:text="Next"
                android:textSize="14dp"
                android:theme="@style/Button_style" />

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>