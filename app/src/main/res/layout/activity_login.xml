<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_f"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.musiktok.musictok.ActivitesFragment.Accounts.Login_A">


    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@color/black"
        android:orientation="vertical"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/login_details_RL1_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_360sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/d_top_left_right_radius">


        <RelativeLayout
            android:id="@+id/sing_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/login_details_RL3_id">

            <RelativeLayout
                android:id="@+id/Goback"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp">

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_white_cross"
                    android:tint="#7C000000" />

            </RelativeLayout>


            <TextView
                android:id="@+id/login_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/pop_semibold"
                android:gravity="center"
                android:text="Sign up for MusikTok "
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_title_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/pop_regular"
                android:gravity="center"
                android:text="Create a profile,follow,other accounts, make \n your own videos,and more"
                android:textColor="@color/new_light_black"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/login_details_RL3_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/logn_lay"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:id="@+id/email_login_btn"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/login_btn_draw">


                <TextView
                    android:id="@+id/email_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:fontFamily="@font/pop_medium"
                    android:gravity="center"
                    android:text="Sign Up With Phone or Email"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="TODO"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_profile_gray"
                    android:tint="@color/white"
                    android:visibility="gone" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/or_lay"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_login_btn"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/pop_regular"
                    android:gravity="center"
                    android:text="OR"
                    android:textColor="#80141822"
                    android:textSize="14dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sign_with_account"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/or_lay"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:fontFamily="@font/pop_medium"
                    android:gravity="center"
                    android:text="Sign up with social account"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/sign_in_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_with_account"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/facebook_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/sign_with_account"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:visibility="visible">


                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_new_fb" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/google_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sign_with_account"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_new_google" />

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/login_terms_condition_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_details_RL3_id"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="By signing up, you confirm that you agree to our \n Terms of Use and have read and understood \n our Privacy Policy."
            android:textColor="@color/dimgray"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/logn_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pop_regular"
                android:text="Already have an account? "
                android:textColor="#141822"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pop_medium"
                android:text="Log In "
                android:textColor="#F06E7C"
                android:textSize="15dp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
