<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/upperlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_pic"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_user_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_pic"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/message_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/pop_regular"
                    android:text="Username"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/pop_light"
                    android:text="Comment message here..."
                    android:textColor="#C3C3C3"
                    android:textSize="@dimen/_9sdp" />

                <RelativeLayout
                    android:id="@+id/like_layout"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/like_image"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:scaleType="fitCenter"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_heart_gray_out" />

                    <TextView
                        android:id="@+id/like_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/like_image"
                        android:text="Likes"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/pop_regular"
                        android:textColor="#858585"
                        android:textSize="10dp" />
                    <TextView
                        android:id="@+id/reply_count"
                        android:layout_toRightOf="@+id/like_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pop_regular"
                        android:layout_marginLeft="20dp"
                        android:text="View replies (20)"
                        android:textColor="#003797"
                        android:textSize="11dp" />
                </RelativeLayout>



                <LinearLayout
                    android:id="@+id/less_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/reply_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <TextView
                        android:id="@+id/show_less_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/pop_regular"
                        android:text="Show Less"
                        android:textColor="@color/gray"
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>

            <!--<LinearLayout
                android:id="@+id/like_layout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/message_layout"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/like_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_heart_gray_out" />

                <TextView
                    android:id="@+id/like_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="likes"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

            </LinearLayout>-->


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>