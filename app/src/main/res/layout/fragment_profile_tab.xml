<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Profile_F"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.musiktok.musictok.ActivitesFragment.Profile.Profile_Tab_F">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_50sdp"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--                android:background="@drawable/d_bottom_gray_line"-->


                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/pop_medium"
                    android:text="UserName"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title" />

                <RelativeLayout
                    android:id="@+id/rel_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/back_btn_new"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_new_back"
                        android:tint="@color/black" />
                </RelativeLayout>

                <!--  <RelativeLayout
                      android:id="@+id/relEdit"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginRight="@dimen/_5sdp"
                      android:layout_toLeftOf="@id/message_btn">

                      <ImageView
                          android:id="@+id/new_edit"
                          android:layout_width="24dp"
                          android:layout_height="24dp"
                          android:layout_centerInParent="true"
                          android:layout_margin="@dimen/_5sdp"
                          android:background="@color/transparent"
                          android:scaleType="fitCenter"
                          android:src="@drawable/ic_new_edit"
                          android:tint="@color/black" />
                  </RelativeLayout>-->

                <ImageButton
                    android:id="@+id/message_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_new_menu"
                    android:tint="@color/black" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bannerad"
            android:layout_below="@+id/toolbar"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">

                <!--      <LinearLayout
                          android:id="@+id/back_new_img1"
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/_200sdp"
                          android:layout_marginBottom="@dimen/_minus20sdp"
                          android:background="@drawable/ic_new_user_bg"
                          android:orientation="vertical">

                      </LinearLayout>
      -->
                <!--   <LinearLayout
                       android:id="@+id/back_new_img_"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_200sdp"
                       android:layout_below="@id/back_new_img1"
                       android:background="@drawable/user_profile_bg_rounded"
                       android:orientation="vertical">

                   </LinearLayout>-->

                <RelativeLayout
                    android:id="@+id/ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/user_icon_"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_user_icon"
                            app:civ_border_color="@color/white"
                            app:civ_border_overlay="true"
                            app:civ_border_width="@dimen/_2sdp" />

                        <ImageView
                            android:id="@+id/varified_btn"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_verified"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/username2_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_icon_"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/pop_medium"
                        android:text="UserName"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                    <!--                    android:layout_toRightOf="@id/user_icon_"-->
                    <!--                    android:layout_marginLeft="@dimen/_20sdp"-->

                    <!-- <androidx.cardview.widget.CardView
                         android:id="@+id/video_card"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_below="@id/username2_txt"
                         android:layout_centerHorizontal="true"
                         android:layout_marginTop="10dp"
                         app:cardBackgroundColor="@color/lightgraycolor"
                         app:cardCornerRadius="15dp"
                         app:cardElevation="0dp">

                         <TextView
                             android:id="@+id/video_count_txt"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:fontFamily="@font/pop_regular"
                             android:paddingLeft="20dp"
                             android:paddingTop="5dp"
                             android:paddingRight="20dp"
                             android:paddingBottom="5dp"
                             android:text="0 Video"
                             android:textColor="@color/dimgray"
                             android:textSize="15dp"
                             android:textStyle="bold" />
                     </androidx.cardview.widget.CardView>-->
                    <RelativeLayout
                        android:id="@+id/video_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/username2_txt"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_roundshape">

                        <TextView
                            android:id="@+id/video_count_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pop_regular"
                            android:paddingLeft="20dp"
                            android:paddingTop="5dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="5dp"
                            android:text="0 Video"
                            android:textColor="@color/dimgray"
                            android:textSize="12dp" />
                        <!--                    </androidx.cardview.widget.CardView>-->
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/video_card"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/following_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/follow_count_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_medium"
                                    android:paddingLeft="15dp"
                                    android:paddingTop="2dp"
                                    android:paddingRight="15dp"
                                    android:paddingBottom="2dp"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_medium"
                                    android:paddingLeft="15dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="15dp"
                                    android:paddingBottom="5dp"
                                    android:text="Following"
                                    android:textColor="@color/darkgray"
                                    android:textSize="13dp" />

                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:background="#74989898" />

                            <LinearLayout
                                android:id="@+id/fans_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/fan_count_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_medium"
                                    android:paddingLeft="15dp"
                                    android:paddingTop="2dp"
                                    android:paddingRight="15dp"
                                    android:paddingBottom="2dp"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_medium"
                                    android:paddingLeft="15dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="15dp"
                                    android:paddingBottom="5dp"
                                    android:text="Fans"
                                    android:textColor="@color/darkgray"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:background="#74989898" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/heart_count_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_medium"
                                    android:paddingLeft="15dp"
                                    android:paddingTop="2dp"
                                    android:paddingRight="15dp"
                                    android:paddingBottom="2dp"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_medium"
                                    android:paddingLeft="15dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="15dp"
                                    android:paddingBottom="5dp"
                                    android:text="Heart"
                                    android:textColor="@color/darkgray"
                                    android:textSize="13dp" />

                            </LinearLayout>

                            <View
                                android:id="@+id/viewdraft"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:background="#74989898"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/draft_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/draft_count_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_medium"
                                    android:paddingLeft="15dp"
                                    android:paddingTop="2dp"
                                    android:paddingRight="15dp"
                                    android:paddingBottom="2dp"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/pop_medium"
                                    android:paddingLeft="15dp"
                                    android:paddingTop="5dp"
                                    android:paddingRight="15dp"
                                    android:paddingBottom="5dp"
                                    android:text="Draft"
                                    android:textColor="@color/darkgray"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/edit_profile_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_rounded_background"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:visibility="gone" />


                        </LinearLayout>


                        <!--                        <LinearLayout-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="0.5dp"-->
                        <!--                            android:layout_marginTop="15dp"-->
                        <!--                            android:background="@color/gainsboro" />-->

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relEdit"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/ok"
                    android:layout_centerInParent="true"
                    android:background="@drawable/login_btn_draw">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/pop_regular"
                        android:text="Edit Profile"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tabs_main_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/relEdit"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="#74989898" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        app:tabBackground="@color/white"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="@android:color/transparent"
                        app:tabMode="fixed"
                        app:tabPaddingEnd="0dp"
                        app:tabPaddingStart="0dp"
                        app:tabTextColor="@color/dimgray" />
                    <!--                    app:tabSelectedTextColor="@color/black"-->

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tabs"
                        android:layout_marginTop="1dp" />

                </RelativeLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/create_popup_layout"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_above="@+id/layy"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:animateLayoutChanges="true"
            android:background="@drawable/popup_background"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Tap + to create\n your first short video"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"></RelativeLayout>


    </RelativeLayout>


</FrameLayout>